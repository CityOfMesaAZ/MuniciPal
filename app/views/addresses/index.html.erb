<script id="legislation-template" type="x-tmpl-mustache">

  <article class="legislation pure-g" id={{matterId}}>

<!-- ICON COLUMN -->
    <div class="pure-u-1-24">
      <i class="icon fa {{icon}} fa-2x"></i>
    </div>

<!-- INFO/DETAILS COLUMN -->
    <div class="pure-u-18-24">
      <div class="item-name pure-g">
        <div class="pure-u-3-4">
          <div class="agenda-basics">
            <h4 class="text">{{title}}</h4>
            <div id="event-details-{{matterId}}"></div>
          </div>
        </div>
        <div class="distance pure-u-1-4">
          <div class="geo-scope">{{scope}}</div>
          <div class="distance">{{distance}} miles away</div>
        </div>
      </div>

      <div class="title">
        {{{body}}}
        <div class="matter-comments"><a class="comments" data-matter-id="{{matterId}}" href="#">Share your opinion <span class="fa fa-caret-down"></span></a></div>
      </div>
      <div class="comments"></div>
    </div>
<!-- ATTACHMENTS COLUMN -->

      <div class="pure-u-5-24">
        <div class="matter-attachments" id="attachments-{{matterId}}"></div>
      </div>
    </div>

  </article>
</script>

